---
import TemplateLayout from '../layouts/template.astro'
import CountdownTimer from '../components/CountdownTimer';

const graduationDate = new Date('2023-06-22T00:00:00');
const bgImageUrl = "https://itbem-events-bucket-prod.s3.amazonaws.com/events/df05579f-b9fd-4f2e-a2be-287867bdecab.webp";
---

<TemplateLayout title="Nos Graduamos 2022-2025 | El Gran Día">
  <div class="flex justify-center items-center min-h-screen bg-gray-50">
    <div class="w-full max-w-2xl px-4 pb-10 font-[Montserrat] bg-white shadow-sm">
      <!-- Header -->
      <header class="bg-white py-4 sticky top-0 z-10">
        <h1 class="text-center text-2xl font-bold text-amber-800">EL GRAN DÍA</h1>
        <div class="flex justify-between my-4 text-center px-8">
          <CountdownTimer targetDate={graduationDate} client:visible />
        </div>
      </header>

      <!-- Title -->
      <div class="text-center my-8">
        <h2 class="text-4xl font-bold text-slate-800">NOS GRADUAMOS</h2>
        <div class="flex flex-col items-center mt-2">
          <span class="text-5xl font-bold">2022</span>
          <span class="text-2xl">-</span>
          <span class="text-5xl font-bold">2025</span>
        </div>
      </div>

      <!-- Preparatoria -->
      <div class="text-center my-8">
        <div class="inline-flex items-center justify-center">
          <div class="w-9 h-9 rounded-full bg-blue-600 flex items-center justify-center text-white mr-2">
            <span class="font-bold text-lg">P</span>
          </div>
          <h3 class="text-3xl font-bold">PREPARATORIA</h3>
        </div>
      </div>

      <!-- Gallery -->
      <div class="grid grid-cols-3 gap-3 my-6 px-4">
        {Array(6).fill(0).map((_, i) => (
          <div
            class="aspect-square rounded overflow-hidden shadow-md"
            style={`background-image: url('${bgImageUrl}'); background-size: cover; background-position: center;`}
          ></div>
        ))}
      </div>

      <p class="text-center my-6 text-base">
        Tenemos un lindo año y queremos compartir lo vivido
      </p>

      <p class="text-center font-bold my-4 text-lg">
        Jueves 22 de junio del 2023
      </p>

      <!-- Mapa -->
      <div class="my-8 px-4">
        <h3 class="text-center font-bold mb-4 text-lg">MAPA</h3>
        <div class="space-y-4">
          {Array(3).fill(0).map((_, i) => (
            <div class="space-y-2">
              <div
                class="w-full aspect-video rounded shadow-md overflow-hidden"
                style={`background-image: url('${bgImageUrl}'); background-size: cover; background-position: center;`}
              >
                <div class="w-full h-full bg-black bg-opacity-10"></div>
              </div>
              <p class="text-xs sm:text-sm text-gray-600">Imagen de graduación {i + 1}</p>
            </div>
          ))}
        </div>
      </div>

      <!-- Graduados -->
      <div class="my-8 px-6">
        <h3 class="text-center font-bold text-2xl mb-4">Graduados</h3>
        <ul class="text-sm space-y-1 sm:columns-2 md:columns-1 lg:columns-2">
          <li>Juan Carlos Vázquez Hernández</li>
          <li>María Guadalupe González</li>
          <li>José Antonio García Sánchez</li>
          <li>Ana Sofía Martínez Rodríguez</li>
          <li>Pedro Luis Ramírez Quiroga</li>
          <li>Laura Patricia Mendoza</li>
          <li>Miguel Ángel Gómez Ortega</li>
          <li>Raúl Pérez Wong</li>
        </ul>
      </div>

      <!-- Footer -->
      <footer class="mt-10 text-center text-sm text-gray-500">
        <p>celebremos juntos</p>
        <div class="flex justify-center gap-4 mt-4">
          <div class="w-7 h-7 bg-red-500 rounded-full"></div>
          <div class="w-7 h-7 bg-blue-500 rounded-full"></div>
          <div class="w-7 h-7 bg-yellow-500 rounded-full"></div>
        </div>
      </footer>
    </div>
  </div>
</TemplateLayout>
